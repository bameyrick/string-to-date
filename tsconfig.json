{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "esnext"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist/"],
  "include": ["src/**/*"]
}
